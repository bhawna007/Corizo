.btn::after{
    content:"";
    z-index: -1;
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: #333;
    left:0;
    top:0;
    border-radius: 10px;
}

.btn::before{
    content: "";
    background: linear-gradient(45deg, #f00000,#ff7300,#fffb00,#48ff00,#00ffd5,#002bff,#ff00c8,#ff0000);
position: absolute;
top: -2px;
left: -2px;
background-size: 600%;
z-index: -1;
width: calc(100% + 4px);
height: calc(100% + 4px);
filter: blur(8px);
/*animations*/
transition:opacity .3s ease-in-out;
border-radius: 10px;
opacity: 1;
}
@keyframes glowing{

}

